<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.project.Activity.CartListActivity" />
        <activity android:name="com.example.project.Activity.ShowDetailActivity" />
        <activity android:name="com.example.project.Activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.project.Activity.MainActivity"></activity>
        <activity android:name="com.example.project.Activity.LoginActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>